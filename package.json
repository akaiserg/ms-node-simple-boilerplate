{
  "name": "simple-boilerplate",
  "version": "0.0.1",
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "auto-start": "node_modules/nodemon/bin/nodemon.js ./bin/www",
    "common-test": "node_modules/mocha/bin/mocha app/common/*.spec.js -t 10000 -R nyan --watch",
    "middleware-test": "node_modules/mocha/bin/mocha app/middlewares/**/*.spec.js -t 10000 -R nyan --watch",
    "model-test": "node_modules/mocha/bin/mocha app/model/*.spec.js -t 10000 -R nyan --watch",
    "route-test": "node_modules/mocha/bin/mocha app/routes/*.spec.js -t 10000 -R nyan --watch",
    "controller-test": "node_modules/mocha/bin/mocha app/controllers/*.spec.js -t 10000 -R nyan --watch",
    "service-test": "node_modules/mocha/bin/mocha app/services/*.spec.js -t 10000 -R nyan --watch",
    "unit-test": "node_modules/mocha/bin/mocha ./app/**/*.spec.js -t 10000",
    "unit-test-w": "node_modules/mocha/bin/mocha ./app/**/*.spec.js --watch -t 10000 -R nyan",
    "unit-test-n": "node_modules/mocha/bin/mocha ./app/**/*.spec.js -t 10000 -R nyan",
    "unit-test-report": "node_modules/mocha/bin/mocha ./app/**/*.spec.js -t 10000 --reporter mochawesome",
    "zip-unit-test-report": "rm -R mochawesome-report; rm unit-test-report.zip; npm run unit-test-report;zip -r unit-test-report.zip mochawesome-report; rm -R  mochawesome-report",
    "coverage-report": "node node_modules/istanbul/lib/cli.js  cover node_modules/mocha/bin/_mocha app/**/*.spec.js -t 10000",
    "zip-coverage-report": "rm *coverage-report.zip; npm run coverage; zip -r coverage-report.zip coverage; rm -R coverage/",
    "stub-backend": "node node_modules/stubby/bin/stubby -d stubs/backend.yaml -s 8080 -t 8081 -a 8082  -w ",
    "iso-test": "./node_modules/.bin/cucumber.js spec/features/isolation",
    "iso-cucumber-report-json": "./node_modules/.bin/cucumber.js spec/features/isolation -f json:cucumber_report.json",
    "iso-cucumber-report-html": "node cucumber-report-generator.js",
    "zip-iso-cucumber-report": "npm run iso-cucumber-report-json; npm run  iso-cucumber-report-html; zip -r  functional-tests-report.zip  cucumber_report.html;rm -R cucumber_report.json;rm -R cucumber_report.html",
    "eslint": "node_modules/.bin/eslint app.js app/model/*.js app/common/*.js app/security-middleware/*.js app/route-middleware/*.js app/config/* app/controllers/*  app/routes --quiet",
    "check-updates": "node node_modules/npm-check-updates/bin/ncu",
    "check-libraries": "node node_modules/npm-check/bin/cli.js --ignores=express-routemap,lodash,cucumber,depcheck",
    "outdated": "npm outdated --prod",
    "test": "npm-run-all unit-test-n -p -r iso-test"
  },
  "dependencies": {
    "body-parser": "1.17.2",
    "debug": "2.6.8",
    "express": "4.15.3",
    "express-routemap": "1.1.0",
    "helmet": "^3.8.1",
    "lodash": "4.17.4",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^2.0.7",
    "unirest": "^0.5.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cucumber": "^1.3.3",
    "cucumber-assert": "2.0.0",
    "cucumber-html-reporter": "^2.0.3",
    "depcheck": "0.6.7",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.2",
    "is-buffer": "^1.1.5",
    "istanbul": "0.4.5",
    "mocha": "^3.5.0",
    "mochawesome": "^2.3.0",
    "mockery": "2.0.0",
    "node-rest-client": "^3.1.0",
    "nodemon": "1.11.0",
    "npm-check": "5.4.4",
    "npm-check-updates": "2.11.3",
    "npm-run-all": "^4.0.2",
    "sinon": "1.17.7",
    "stubby": "^4.0.0"
  }
}
